div.inner
      form#order(method="POST" action=`/pgorder/update/${order.id}` name='jobs')
        input(type="hidden" name="_method" value="PUT")
        div.info
          input(type="hidden" name="car" value=`${order.car.id}`)
          input(type="hidden" name="client" value=`${client.id}`)
          input#orderid(type="hidden" name="order" value=`${order.id}`)
          table#jobinfo(border='1'  width='20%' cellpadding='4' cellspacing='1')
            tbody
              tr
                td(colspan='4')
                  strong ORDER: 
                  p3 #{order.number} 
              tr
                td
                  strong Car:   
                  a(href=`/car/${order.car.id}`) 
                    p3 #{order.car.brand} #{order.car.model} (#{order.car.releaseYear})
              tr
                td
                  strong Owner:
                  p3   
                    a(href=`/client/${order.client.id}`) #{order.client.name}
              tr
                td
                  strong Status:
                  p3  #{order.orderStatus}
                    
        div
          table#jobtable(border='0'  width='20%' cellpadding='4' cellspacing='1')
            tbody
              tr
                td(colspan='4')
                  strong JOBS:
              tr
                td
                  strong â„–
                td
                  strong Name
                td
                  strong Cost
                td   
            if fullJobsInfo
              each job, index in fullJobsInfo
                tr.jobrows
                  td #{index + 1}
                  td #{job[2]}
                  td(id=`job-cost${index + 1}`) #{job[1]}
        div 
          table#jobcost(border='1'  width='20%' cellpadding='4' cellspacing='1')
            tbody
              tr
                td(colspan='4')
                  strong TOTAL:  
                    input#total(type='number' disabled)
                  strong   RUR
