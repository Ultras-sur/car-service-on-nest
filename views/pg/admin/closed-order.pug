div.inner
      form#order(method="POST" action=`/pgorder/update/${order.id}` name='jobs')
        input(type="hidden" name="_method" value="PUT")
        div.info
          input(type="hidden" name="car" value=`${order.car.id}`)
          input(type="hidden" name="client" value=`${order.client.id}`)
          input#orderid(type="hidden" name="order" value=`${order.id}`)
          table#jobinfo(border='1'  width='20%' cellpadding='4' cellspacing='1')
            tbody
              tr
                td(colspan='4')
                  strong ORDER: 
                  p3 #{order.number} 
              tr
                td
                  strong Car:   
                  a(href=`/pgcar/${order.car.id}`) 
                    p3 #{order.car.brand.name} #{order.car.model.name} (#{order.car.releaseYear})
              tr
                td
                  strong Owner:
                  p3   
                    a(href=`/pgclient/${order.client.id}`) #{order.client.name}
              tr
                td
                  strong Status:
                    div#div-status
                      select#status-selection 
                        option(value='closed' selected) closed
                        option(value='opened') opened
        div
          table#jobtable(border='0'  width='20%' cellpadding='4' cellspacing='1')
            tbody
              tr
                td(colspan='4')
                  strong JOBS:
              tr
                td
                  strong â„–
                td
                  strong Name
                td
                  strong Cost
                td   
            if order.jobs
              each job, index in order.jobs
                tr.jobrows
                  td #{index + 1}
                  td #{job.name}
                  td(id=`job-cost${index + 1}`) #{job.cost}
        div 
          table#jobcost(border='1'  width='20%' cellpadding='4' cellspacing='1')
            tbody
              tr
                td(colspan='4')
                  strong TOTAL:  
                    input#total(type='number' disabled)
                  strong   RUR
